{
  "name": "markmaid",
  "version": "0.0.1",
  "description": "Process (github) markdown files and translate mermaid charts to images",
  "main": "dist/md-mermaid-loader.js",
  "scripts": {
    "build": "npm run clean && browserify --node -t babelify -o dist/cli.js src/cli.js",
    "clean": "rm -rf dist/*",
    "mermaid": "mermaid",
    "postinstall": "npm run build",
    "test": "browserify --node -t babelify test/*.js | node | faucet",
    "watch": "nodemon -q -w ./src -w ./test -e js -x npm run test 2> /dev/null"
  },
  "bin": {
    "markmaid": "dist/cli.js"
  },
  "author": "Nicklas Nygren",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-fs": "^1.0.0",
    "faucet": "0.0.1",
    "nodemon": "^1.9.1",
    "sinon": "^1.17.3",
    "tape": "^4.5.1"
  },
  "dependencies": {
    "glob": "^7.0.3",
    "jssha": "^2.0.2",
    "mermaid": "^0.5.8",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "phantomjs": "^1.9.8"
  }
}
