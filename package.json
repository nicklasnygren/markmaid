{
  "name": "md-mermaid-loader",
  "version": "0.0.1",
  "description": "Process (github) markdown files and translate mermaid charts to images",
  "main": "dist/md-mermaid-loader.js",
  "scripts": {
    "build": "browserify -t babelify src/main.js > dist/md-mermaid-loader.js",
    "clean": "rm -rf dist/*",
    "test": "browserify -t babelify test/*.js | node | faucet",
    "watch": "nodemon -q -w ./src -w ./test -e js -x npm run test 2> /dev/null"
  },
  "author": "Nicklas Nygren",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "faucet": "0.0.1",
    "nodemon": "^1.9.1",
    "tape": "^4.5.1"
  }
}
