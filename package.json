{
  "name": "markmaid",
  "version": "0.1.0",
  "description": "Process (github) markdown files and translate mermaid charts to images",
  "main": "dist/md-mermaid-loader.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/nicklasnygren/markmaid"
  },
  "scripts": {
    "build": "npm run clean && echo '#!/usr/bin/env node' > dist/cli.js && browserify --node -t babelify src/cli.js >> dist/cli.js",
    "build-docs": "rm -rf docs/img; babel-node src/cli.js ./docs/**/*.md --output-dir . --image-dir docs/img",
    "clean": "rm -rf dist && mkdir dist",
    "prepublish": "npm run build",
    "test": "rm -rf testrun && mkdir testrun && browserify --node -t babelify test/*.js | node | faucet",
    "watch": "nodemon -q -w ./src -w ./test -e js -x npm run test 2> /dev/null",
    "cli": "markmaid"
  },
  "bin": {
    "markmaid": "dist/cli.js"
  },
  "author": "Nicklas Nygren",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chalk": "^1.1.3",
    "faucet": "0.0.1",
    "nodemon": "^1.9.1",
    "sinon": "^1.17.3",
    "tape": "^4.5.1"
  },
  "dependencies": {
    "glob": "^7.0.3",
    "jssha": "^2.0.2",
    "mermaid": "^0.5.8",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "phantomjs": "^1.9.8"
  }
}
